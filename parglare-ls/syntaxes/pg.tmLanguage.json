{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.pg",
	"fileTypes": [
    ".pg"
  ],
  "patterns": [
		{ 
			"include": "#command_name"
		},
		{
			"include": "#special_characters"
		}
	],
  "repository": {
    "command_name": {
      "name": "string.quoted",
			"match": "\\w+: "
    },
		"special_characters": {
			"name": "constant.character.escape",
			"match": ";|:"
		}
  }
}